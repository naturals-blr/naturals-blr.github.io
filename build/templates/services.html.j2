<script>
// ── Baked-in data — no Google Sheets fetch ──
const ALL_DATA = {{ services_json }};

const STORE_NAMES = {
  {% for store in stores %}
  '{{ store.Store_ID | lower }}': '{{ store.Store_Name }}',
  {% endfor %}
};

// activeFilters.gender: 'all' | 'female' | 'male' | 'unisex'
let activeFilters = { store: 'all', gender: 'all', category: 'all' };

function ci(s) { return (s || '').trim().toLowerCase(); }

// Maps raw sheet Gender value → normalised key
function normGender(raw) {
  var g = ci(raw);
  if (g === 'female' || g === 'women' || g === 'f' || g === 'w') return 'female';
  if (g === 'male'   || g === 'men'   || g === 'm')              return 'male';
  if (g === 'unisex' || g === 'both'  || g === 'u' || g === 'b') return 'unisex';
  return 'unisex'; // fallback
}

function isYes(val) {
  var v = ci(val);
  return v === 'yes' || v === 'y' || v === 'true' || v === '1';
}

function genIcon(g) {
  return g === 'female' ? '&#9792;' : g === 'male' ? '&#9794;' : '&#9893;';
}

// ── Returns rows matching current store + gender (ignores category) ──
function getStoreGenderSubset() {
  return ALL_DATA.filter(function(r) {
    // Store filter
    if (activeFilters.store !== 'all') {
      if (!isYes(r[activeFilters.store])) return false;
    }
    // Gender filter
    if (activeFilters.gender !== 'all') {
      if (normGender(r['Gender'] || '') !== activeFilters.gender) return false;
    }
    return true;
  });
}

// ── Rebuild category dropdown from current store+gender subset ──
function rebuildCategoryDropdown(preserveValue) {
  var subset = getStoreGenderSubset();
  // Collect unique categories in order of appearance
  var seen = [];
  subset.forEach(function(r) {
    var cat = (r['Category'] || 'Other').trim();
    if (cat && seen.indexOf(cat) === -1) seen.push(cat);
  });

  var sel = document.getElementById('cat-select');
  var prevVal = preserveValue ? sel.value : 'all';

  sel.innerHTML = '<option value="all">All Categories</option>';
  seen.forEach(function(cat) {
    var opt = document.createElement('option');
    opt.value = ci(cat);
    opt.textContent = cat;
    sel.appendChild(opt);
  });

  // Restore previous selection if it still exists, else reset to All
  var stillExists = Array.from(sel.options).some(function(o) { return o.value === prevVal; });
  sel.value = stillExists ? prevVal : 'all';
  activeFilters.category = sel.value;
  sel.classList.toggle('active', sel.value !== 'all');
}

// ── Category dropdown handler ──
function setCatDropdown(sel) {
  activeFilters.category = sel.value;
  sel.classList.toggle('active', sel.value !== 'all');
  renderServices();
}

// ── Main render ──
function renderServices() {
  var container = document.getElementById('svc-container');
  var empty     = document.getElementById('empty-state');
  var countEl   = document.getElementById('results-count');
  var storeEl   = document.getElementById('results-store');
  container.innerHTML = '';

  var filtered = ALL_DATA.filter(function(r) {
    // Store
    if (activeFilters.store !== 'all') {
      if (!isYes(r[activeFilters.store])) return false;
    }
    // Gender — exact match only; 'all' shows everything
    if (activeFilters.gender !== 'all') {
      if (normGender(r['Gender'] || '') !== activeFilters.gender) return false;
    }
    // Category
    if (activeFilters.category !== 'all') {
      if (ci(r['Category'] || '') !== activeFilters.category) return false;
    }
    return true;
  });

  countEl.textContent = filtered.length + ' service' + (filtered.length !== 1 ? 's' : '') + ' found';
  storeEl.textContent = activeFilters.store !== 'all'
    ? 'Showing: ' + (STORE_NAMES[ci(activeFilters.store)] || activeFilters.store)
    : 'All {{ stores | length }} Bangalore stores';

  if (!filtered.length) { empty.style.display = ''; return; }
  empty.style.display = 'none';

  // Group by category
  var cats = {};
  filtered.forEach(function(r) {
    var cat = (r['Category'] || 'Other').trim();
    if (!cats[cat]) cats[cat] = [];
    cats[cat].push(r);
  });

  Object.keys(cats).forEach(function(cat) {
    var svcs = cats[cat];
    var sec  = document.createElement('div');
    sec.className = 'cat-section';
    sec.innerHTML =
      '<div class="cat-header">' +
        '<div class="cat-name">' + cat + '</div>' +
        '<div class="cat-count">' + svcs.length + ' service' + (svcs.length !== 1 ? 's' : '') + '</div>' +
      '</div><div class="svc-grid"></div>';
    container.appendChild(sec);

    var grid = sec.querySelector('.svc-grid');
    svcs.forEach(function(r) {
      var name = (r['Service_Name'] || '').trim();
      var dur  = (r['Duration']     || '').trim();
      var reg  = (r['Regular_Cost'] || '').trim();
      var mem  = (r['Member_Cost']  || '').trim();
      var gen  = (r['Gender']       || '').trim();
      var desc = (r['Description']  || '').trim();
      var memHtml  = (mem && ci(mem) !== '-') ? '<span class="price-mem">Members &#8377;' + mem + '</span>' : '';
      var ng       = normGender(gen);
      var genClass = ng === 'female' ? 'svc-tag-w' : ng === 'male' ? 'svc-tag-m' : 'svc-tag-b';
      var card = document.createElement('div');
      card.className = 'svc-card';
      card.innerHTML =
        '<div><div class="svc-card-name">' + name + '</div>' +
        '<div class="svc-card-desc">' + desc + '</div></div>' +
        '<div class="svc-card-foot">' +
          '<div class="svc-tags">' +
            (dur ? '<span class="svc-tag">&#9201; ' + dur + '</span>' : '') +
            (gen ? '<span class="svc-tag ' + genClass + '">' + genIcon(ng) + ' ' + gen + '</span>' : '') +
          '</div>' +
          '<div class="price-col"><span class="price-reg">&#8377;' + reg + '</span>' + memHtml + '</div>' +
        '</div>';
      grid.appendChild(card);
    });
  });
}

// ── setFilter — handles store, gender button clicks ──
function setFilter(type, value, btn) {
  activeFilters[type] = value;

  // Update button active states
  document.querySelectorAll('[data-filter="' + type + '"]').forEach(function(b) { b.classList.remove('active'); });
  btn.classList.add('active');

  if (type === 'store') {
    // Store change: reset gender to All, rebuild categories, render
    activeFilters.gender = 'all';
    document.querySelectorAll('[data-filter="gender"]').forEach(function(b) {
      b.classList.toggle('active', b.dataset.value === 'all');
    });
    rebuildCategoryDropdown(false);
    renderServices();
  } else if (type === 'gender') {
    // Gender change: rebuild categories (reset to All), render
    rebuildCategoryDropdown(false);
    renderServices();
  }
}

// ── Scroll to top visibility ──
var scrollBtn = document.getElementById('scroll-top');
window.addEventListener('scroll', function() {
  scrollBtn.classList.toggle('visible', window.scrollY > 320);
}, { passive: true });

// ── Initialise on page load ──
document.addEventListener('DOMContentLoaded', function() {
  var params      = new URLSearchParams(window.location.search);
  var storeParam  = (params.get('store')  || '').trim();
  var catParam    = (params.get('cat')    || '').trim().toLowerCase();
  var genderParam = (params.get('gender') || '').trim().toLowerCase();

  // Apply store param
  if (storeParam) {
    activeFilters.store = storeParam;
    document.querySelectorAll('[data-filter="store"]').forEach(function(b) {
      b.classList.toggle('active', b.dataset.value === storeParam);
    });
  }

  // Apply gender param
  if (genderParam && ['all','female','male','unisex'].indexOf(genderParam) !== -1) {
    activeFilters.gender = genderParam;
    document.querySelectorAll('[data-filter="gender"]').forEach(function(b) {
      b.classList.toggle('active', b.dataset.value === genderParam);
    });
  }

  // Build category dropdown based on store+gender state
  rebuildCategoryDropdown(false);

  // Apply category param after dropdown is built
  if (catParam) {
    var sel = document.getElementById('cat-select');
    var match = Array.from(sel.options).find(function(o) { return ci(o.value) === catParam; });
    if (match) {
      sel.value = match.value;
      activeFilters.category = match.value;
      sel.classList.add('active');
    }
  }

  renderServices();
});
</script>

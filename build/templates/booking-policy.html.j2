.step{background:#fff;padding:20px 24px;display:flex;gap:20px;align-items:flex-start;}
.step-num{font-family:'Cormorant Garamond',serif;font-size:36px;color:var(--gold);font-weight:300;line-height:1;flex-shrink:0;width:36px;}
.step-body h3{font-family:'Cormorant Garamond',serif;font-size:18px;font-weight:400;margin-bottom:4px;}
.step-body p{font-size:13px;color:var(--text-mid);line-height:1.7;font-weight:300;}
/* FAQ */

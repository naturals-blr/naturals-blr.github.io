<style>
{{ theme_vars() }}
*{margin:0;padding:0;box-sizing:border-box;}
html{scroll-behavior:smooth;}
body{font-family:'Jost',sans-serif;background:var(--cream);color:var(--text);overflow-x:hidden;}
img{display:block;width:100%;object-fit:cover;}
a{text-decoration:none;color:inherit;}

/* nav handled by partials/header.j2 */

/* ── HERO ── */
.hero{height:100vh;min-height:700px;position:relative;display:flex;align-items:center;justify-content:center;overflow:hidden;}
.hero-bg{position:absolute;inset:0;}
.hero-bg img{height:100%;object-fit:cover;}
.hero-ov{position:absolute;inset:0;background:linear-gradient(135deg,var(--hero-tint) 0%,var(--hero-tint2) 60%,rgba(0,0,0,0.1) 100%);}
.hero-inner{position:relative;z-index:2;text-align:center;padding:0 24px;max-width:800px;}
.hero-tag{display:inline-flex;align-items:center;gap:12px;font-size:9px;letter-spacing:5px;text-transform:uppercase;color:var(--gold);font-weight:600;margin-bottom:24px;}
.hero-tag::before,.hero-tag::after{content:'';width:24px;height:1px;background:var(--gold);}
.hero h1{font-family:'Cormorant Garamond',serif;font-size:clamp(52px,8vw,100px);font-weight:300;color:#fff;line-height:0.92;letter-spacing:-2px;margin-bottom:20px;}
.hero h1 em{font-style:italic;color:var(--gold);}
.hero-sub{font-size:14px;color:rgba(255,255,255,0.5);font-weight:300;letter-spacing:1px;margin-bottom:40px;}
.hero-btns{display:flex;gap:14px;justify-content:center;flex-wrap:wrap;}
.btn-hero-primary{background:var(--gold);color:var(--dark);padding:16px 36px;font-size:11px;letter-spacing:2.5px;text-transform:uppercase;font-weight:700;transition:all 0.3s;display:inline-flex;align-items:center;gap:8px;border-radius:2px;}
.btn-hero-primary:hover{background:var(--gold-pale);transform:translateY(-2px);}
.btn-hero-secondary{border:1px solid rgba(255,255,255,0.35);color:#fff;padding:16px 36px;font-size:11px;letter-spacing:2.5px;text-transform:uppercase;transition:all 0.3s;display:inline-flex;align-items:center;gap:8px;border-radius:2px;}
.btn-hero-secondary:hover{border-color:var(--gold);color:var(--gold);}
.hero-scroll{position:absolute;bottom:36px;left:50%;transform:translateX(-50%);display:flex;flex-direction:column;align-items:center;gap:8px;}
.hero-scroll span{font-size:9px;letter-spacing:3px;text-transform:uppercase;color:rgba(255,255,255,0.3);}
.hero-scroll-line{width:1px;height:40px;background:linear-gradient(to bottom,rgba(255,255,255,0.3),transparent);}

/* ── SHARED ── */
.lbl{font-size:9px;letter-spacing:5px;text-transform:uppercase;color:var(--gold);font-weight:600;margin-bottom:16px;display:flex;align-items:center;gap:12px;}
.lbl::before{content:'';width:18px;height:1px;background:var(--gold);}
.sec-hdr{text-align:center;max-width:600px;margin:0 auto 52px;}
.sec-hdr .lbl{justify-content:center;}
.sec-hdr .lbl::before{display:none;}
.sec-hdr h2{font-family:'Cormorant Garamond',serif;font-size:clamp(36px,5vw,60px);font-weight:300;line-height:1;margin-bottom:16px;}
.sec-hdr h2 em{font-style:italic;color:var(--green-mid);}
.sec-hdr p{font-size:14px;color:var(--text-mid);font-weight:300;line-height:1.8;}
.reveal{opacity:0;transform:translateY(24px);transition:opacity 0.7s ease,transform 0.7s ease;}
.reveal.visible{opacity:1;transform:translateY(0);}

/* ── STORES ── */
.stores-sec{padding:100px 60px;background:var(--dark);}
.stores-sec .sec-hdr h2{color:#fff;}
.stores-sec .sec-hdr h2 em{color:var(--green-soft);}
.stores-sec .sec-hdr p{color:rgba(255,255,255,0.4);}
.st-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:3px;max-width:1100px;margin:0 auto;}
.st-card{background:#fff;overflow:hidden;transition:transform 0.3s,box-shadow 0.3s;display:flex;flex-direction:column;border:1px solid rgba(0,0,0,0.08);border-radius:10px;box-shadow:0 2px 12px rgba(0,0,0,0.07);min-height:300px;}
.st-card:hover{transform:translateY(-4px);box-shadow:0 12px 48px rgba(0,0,0,0.3);}
.st-card-head{background:var(--dark);padding:20px 22px;border-bottom:2px solid var(--green);border-radius:10px 10px 0 0;}
[data-theme="naturals"] .st-card-head{border-bottom-color:var(--green-mid);}
.st-card-num{font-family:'Cormorant Garamond',serif;font-size:13px;color:rgba(255,255,255,0.2);letter-spacing:3px;margin-bottom:4px;}
.st-card-name{font-family:'Cormorant Garamond',serif;font-size:20px;color:#fff;font-weight:400;line-height:1.1;}
.st-card-area{font-size:9px;letter-spacing:2px;text-transform:uppercase;color:var(--gold);margin-top:3px;}
.st-card-body{padding:16px 22px 20px;flex:1;display:flex;flex-direction:column;}
.st-card-phone{font-size:13px;color:var(--text-mid);margin-bottom:6px;display:flex;align-items:center;gap:6px;}
.st-card-addr{font-size:11px;color:var(--text-light);line-height:1.5;flex:1;margin-bottom:14px;}
.st-card-actions{display:flex;gap:6px;flex-wrap:wrap;}
.st-book-btn{background:var(--gold);color:var(--dark);padding:10px 16px;font-size:10px;letter-spacing:1.5px;text-transform:uppercase;font-weight:700;display:inline-flex;align-items:center;gap:5px;transition:all 0.3s;flex:1;justify-content:center;border-radius:2px;}
.st-book-btn:hover{background:var(--gold-pale);}
.st-view-btn{border:1px solid rgba(0,0,0,0.14);color:var(--text-mid);padding:9px 14px;font-size:10px;letter-spacing:1.5px;text-transform:uppercase;font-weight:600;display:inline-flex;align-items:center;gap:5px;transition:all 0.3s;border-radius:2px;}
.st-view-btn:hover{border-color:var(--green-mid);color:var(--green-mid);}

/* ── SERVICES ── */
.services-sec{padding:100px 60px;background:var(--cream);}
.svc-cats-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:3px;margin-bottom:48px;}
.svc-cat-card{background:#fff;overflow:hidden;border-radius:8px;border:1px solid rgba(0,0,0,0.07);transition:all 0.3s;cursor:pointer;display:flex;flex-direction:column;}
.svc-cat-card:hover{transform:translateY(-4px);box-shadow:0 12px 36px rgba(0,0,0,0.1);border-color:var(--gold);}
.svc-cat-img{height:180px;overflow:hidden;flex-shrink:0;}
.svc-cat-img img{width:100%;height:100%;object-fit:cover;transition:transform 0.6s ease;}
.svc-cat-card:hover .svc-cat-img img{transform:scale(1.05);}
.svc-cat-body{padding:20px 22px 24px;display:flex;flex-direction:column;flex:1;}
.svc-cat-icon{font-size:22px;margin-bottom:8px;display:block;}
.svc-cat-name{font-family:'Cormorant Garamond',serif;font-size:20px;font-weight:400;color:var(--text);margin-bottom:6px;line-height:1.1;}
.svc-cat-desc{font-size:12px;color:var(--text-mid);line-height:1.7;font-weight:300;flex:1;}
.svc-cat-price{margin-top:12px;font-size:13px;font-weight:600;color:var(--green-mid);letter-spacing:0.5px;}

/* ── OFFERS ── */
.offers-sec{padding:80px 60px;background:var(--dark);}
.offers-sec .sec-hdr h2{color:#fff;}
.offers-sec .sec-hdr h2 em{color:var(--gold);}
.offers-sec .sec-hdr p{color:rgba(255,255,255,0.4);}
.home-offers-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:3px;margin-bottom:32px;}
.hoc{background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.08);padding:28px;transition:all 0.3s;}
.hoc:hover{background:rgba(255,255,255,0.07);border-color:var(--gold);}
.hoc-badge{font-size:9px;letter-spacing:3px;text-transform:uppercase;color:var(--gold);font-weight:600;margin-bottom:10px;}
.hoc-title{font-family:'Cormorant Garamond',serif;font-size:22px;color:#fff;font-weight:300;margin-bottom:8px;line-height:1.2;}
.hoc-details{font-size:12px;color:rgba(255,255,255,0.42);line-height:1.7;font-weight:300;margin-bottom:12px;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;}
.hoc-meta{display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:8px;padding-top:12px;border-top:1px solid rgba(255,255,255,0.08);}
.hoc-store{font-size:10px;color:rgba(255,255,255,0.3);letter-spacing:1px;text-transform:uppercase;}
.hoc-valid{font-size:11px;color:var(--green-soft);}
.hoc-book{background:var(--gold);color:var(--dark);padding:8px 16px;font-size:10px;letter-spacing:1.5px;text-transform:uppercase;font-weight:700;display:inline-flex;align-items:center;gap:5px;transition:all 0.3s;border-radius:2px;}
.hoc-book:hover{background:var(--gold-pale);}
.offers-view-all{text-align:center;}

/* ── ABOUT STRIP ── */
.about-strip{background:var(--cream);padding:52px 60px;display:flex;align-items:center;gap:60px;border-top:1px solid rgba(0,0,0,0.06);}
.about-strip-stats{display:flex;gap:48px;flex-shrink:0;}
.astat{text-align:center;}
.astat-num{font-family:'Cormorant Garamond',serif;font-size:42px;color:var(--green-mid);font-weight:300;line-height:1;}
.astat-lbl{font-size:9px;letter-spacing:2.5px;text-transform:uppercase;color:var(--text-light);margin-top:4px;}
.about-strip-text{flex:1;}
.about-strip-text p{font-size:14px;color:var(--text-mid);line-height:1.9;font-weight:300;}

/* ── TESTIMONIALS ── */
.reviews-sec{padding:100px 60px;background:#fff;}
.rv-track{display:grid;grid-template-columns:repeat(3,1fr);gap:3px;margin-top:8px;}
.rv-card{background:var(--cream);padding:32px 28px;}
.rv-stars{color:var(--gold);font-size:14px;margin-bottom:12px;letter-spacing:2px;}
.rv-q{font-family:'Cormorant Garamond',serif;font-size:18px;color:var(--text);font-weight:400;line-height:1.6;margin-bottom:16px;font-style:italic;}
.rv-name{font-size:11px;font-weight:600;color:var(--text);letter-spacing:1px;text-transform:uppercase;}
.rv-store{font-size:10px;color:var(--gold);letter-spacing:1.5px;text-transform:uppercase;margin-top:2px;}

{{ button_css() }}
{{ footer_css() }}
{{ social_icons_css() }}

@media(max-width:992px){
  nav{padding:0 20px;height:60px;}
  .nav-center{display:none;}
  .st-grid{grid-template-columns:1fr 1fr;}
  .svc-cats-grid{grid-template-columns:1fr 1fr;}
  .home-offers-grid{grid-template-columns:1fr;}
  .rv-track{grid-template-columns:1fr 1fr;}
  .about-strip{flex-direction:column;gap:32px;padding:40px 20px;}
  .about-strip-stats{gap:28px;}
  .stores-sec,.services-sec,.offers-sec,.reviews-sec{padding:60px 20px;}
}
@media(max-width:600px){
  nav{padding:0 16px;}
  .hero h1{font-size:clamp(40px,10vw,60px);}
  .hero-btns{flex-direction:column;align-items:center;}
  .st-grid{grid-template-columns:1fr;}
  .svc-cats-grid{grid-template-columns:1fr;}
  .rv-track{grid-template-columns:1fr;}
  .about-strip-stats{flex-wrap:wrap;justify-content:center;}
}
</style>
</head>

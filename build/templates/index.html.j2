{% set base_path = '' %}
{% set active_page = 'home' %}
{% include "partials/header.j2" %}

<!-- ── HERO ── -->
<section class="hero" aria-label="Hero">
  <div class="hero-bg">
    <img src="images/heroes/home.jpg" alt="Naturals Salon & Spa Bangalore — premium beauty services"
         onerror="this.src='https://images.unsplash.com/photo-1522337360788-8b13dee7a37e?w=1800&q=85'"
         loading="eager">
  </div>
  <div class="hero-ov" aria-hidden="true"></div>
  <div class="hero-inner">
    <div class="hero-tag" aria-label="Bangalore's Premium Salon Network">Bangalore's Premium Salon Network</div>
    <h1>Beauty that<br><em>moves you.</em></h1>
    <p class="hero-sub">5 locations &middot; Expert stylists &middot; World-class services</p>
    <div class="hero-btns">
      <a href="#our-stores" class="btn-hero-primary" aria-label="Book appointment — choose your store">&#128197; Book Appointment</a>
      <a href="#our-stores" class="btn-hero-secondary" aria-label="Choose your store">&#128205; Choose Your Store</a>
    </div>
  </div>
  <div class="hero-scroll" aria-hidden="true">
    <span>Scroll</span>
    <div class="hero-scroll-line"></div>
  </div>
</section>

<!-- ── STORES ── -->
<section class="stores-sec" id="our-stores" aria-label="Our store locations">
  <div class="sec-hdr reveal">
    <div class="lbl">Our Locations</div>
    <h2>Five stores.<br><em>One city.</em></h2>
    <p>Walk in or book online — premium beauty services at your doorstep across Bangalore.</p>
  </div>
  <div class="st-grid">
  {% for store in stores %}
    <div class="st-card reveal">
      <div class="st-card-head">
        <div class="st-card-num">0{{ loop.index }}</div>
        <div class="st-card-name">{{ store.Store_Name }}</div>
        <div class="st-card-area">{{ store.Area }} &middot; {{ store.Pincode }}</div>
      </div>
      <div class="st-card-body">
        <div class="st-card-phone">&#128222; <a href="tel:{{ store.Phone_Raw }}" style="color:var(--text-mid);">{{ store.Phone_Mobile }}</a></div>
        <div class="st-card-addr">&#128205; {{ store.Address_Full }}</div>
        <div class="st-card-actions">
          <a href="{{ store.Appointment_URL }}" target="_blank" class="st-book-btn" aria-label="Book at {{ store.Store_Name }}">&#128197; Book Now</a>
          <a href="{{ store.Store_Page_URL }}" class="st-view-btn" aria-label="View {{ store.Store_Name }} store page">Info &#8594;</a>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</section>

<!-- ── SERVICES ── -->
<section class="services-sec" id="services" aria-label="Our services">

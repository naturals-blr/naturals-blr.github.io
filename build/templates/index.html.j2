    {'name': 'Bridal & Makeup',           'icon': '&#128141;','href': 'services.html?gender=female&cat=bridal',              'img': 'images/services/bridal.jpg',      'img_fb': 'https://images.unsplash.com/photo-1595476108010-b4d1f102b1b1?w=600&q=80', 'desc': 'Complete bridal packages — hair, skin prep, makeup and styling.'},
    {'name': "Men's Grooming",            'icon': '&#9988;',  'href': 'services.html?gender=male',                           'img': 'images/services/mens-grooming.jpg','img_fb': 'https://images.unsplash.com/photo-1621605815971-fbc98d665033?w=600&q=80', 'desc': 'Haircuts, beard trims, shaves and facials — done right.'}

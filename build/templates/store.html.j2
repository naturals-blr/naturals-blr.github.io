<body>

{{ tracking_body(gtm_id) }}
{% set base_path = '../' %}
{% set active_page = 'stores' %}
{% include "partials/header.j2" %}

<!-- HERO -->
<section class="hero">
  <div class="hero-bg">
    <img src="../images/heroes/{{ s.Store_Page_URL | replace('stores/','') | replace('.html','') }}.jpg"
         alt="Naturals {{ s.Store_Name }}"
         onerror="this.src='https://images.unsplash.com/photo-1522337360788-8b13dee7a37e?w=1800&q=85'">
  </div>
  <div class="hero-ov"></div>
  <div class="hero-content">
    <div class="hero-badge">Store {{ s.Hero_Number }} of {{ all_stores | length }} &middot; Bangalore</div>
    <h1>Naturals<br><em>{{ s.Area }}</em></h1>
    <div class="hero-sub">{{ s.Area }} &middot; {{ s.Pincode }} &middot; <a href="tel:{{ s.Phone_Tel }}" style="color:rgba(255,255,255,0.55);">{{ s.Phone_Display }}</a></div>
    <!-- 3 actions only — Book, WhatsApp, Directions -->
    <div class="action-bar">
      <a href="{{ s.Appointment_URL }}" target="_blank" class="ab-primary">&#128197; Book Appointment</a>
      <a href="https://wa.me/{{ s.WhatsApp_Number }}" target="_blank" class="ab-ghost">{{ wa_svg(16) }} WhatsApp</a>
      <a href="{{ s.Google_Maps_URL }}" target="_blank" class="ab-ghost">&#128205; Directions</a>
    </div>
  </div>
</section>

<!-- INFO BAR: Phone · WhatsApp · Book · Address -->
<div class="info-bar">
  <div class="info-cell">
    <span class="info-icon">&#128222;</span>
    <div>
      <div class="info-label">Call Us</div>
      <a href="tel:{{ s.Phone_Tel }}" class="info-val">{{ s.Phone_Display }}</a>
    </div>
  </div>
  <div class="info-cell">
    <span class="info-icon">{{ wa_svg(18) }}</span>
    <div>
      <div class="info-label">WhatsApp</div>
      <a href="https://wa.me/{{ s.WhatsApp_Number }}" class="info-val">{{ s.Phone_Display }}</a>
    </div>
  </div>
  <div class="info-cell">
    <span class="info-icon">&#128197;</span>
    <div>
      <div class="info-label">Book Online</div>
      <a href="{{ s.Appointment_URL }}" target="_blank" class="info-val">Book Now</a>
      <span class="info-val-sm">Available 24/7</span>
    </div>
  </div>
  <div class="info-cell">
    <span class="info-icon">&#128205;</span>
    <div>
      <div class="info-label">Address</div>
      <a href="{{ s.Google_Maps_URL }}" target="_blank" class="info-val">{{ s.Address_Full }}</a>
    </div>
  </div>
</div>

<div class="page-wrap">
<div class="main-col">

  <!-- ABOUT -->
  <div class="about-grid reveal">
    <div class="about-img-wrap">
      <img src="../images/heroes/{{ s.Store_Page_URL | replace('stores/','') | replace('.html','') }}.jpg"
           alt="Naturals {{ s.Store_Name }}"
           onerror="this.src='https://images.unsplash.com/photo-1560066984-138dadb4c035?w=900&q=85'">
    </div>
    <div>
      <div class="lbl">Our Store</div>
      <h2 class="sec-title">A premium experience<br>in <em>{{ s.Store_Name }}.</em></h2>
      {% if s.get('seo_intro') %}
      <p class="about-p">{{ s.seo_intro }}</p>
      {% else %}
      <p class="about-p">Welcome to Naturals Salon &amp; Spa {{ s.Store_Name }} — your neighbourhood destination for premium hair, skin and beauty services in {{ s.Area }}, Bangalore. Part of India's most trusted salon network with over 25 years of expertise.</p>
      <p class="about-p">Our expert stylists and therapists deliver world-class results in a relaxed, luxurious setting. Every visit is personalised to you — from precision haircuts and vibrant colour to rejuvenating facials and bridal packages.</p>
      {% endif %}
      <a href="{{ s.Appointment_URL }}" target="_blank" class="btn-gold" style="margin-top:18px;font-size:11px;">Book Your Visit &#8594;</a>
    </div>
  </div>

  <!-- ── SERVICES PROMO — image card linking to services page ── -->
  <a href="../services.html?store={{ s.Store_ID }}" class="svc-promo reveal">
    <img src="../images/services/services-banner.jpg"
         alt="Services at Naturals {{ s.Store_Name }}"
         onerror="this.src='https://images.unsplash.com/photo-1560066984-138dadb4c035?w=1200&q=85'">
    <div class="svc-promo-ov"></div>
    <div class="svc-promo-body">
      <div class="svc-promo-eyebrow">What We Offer</div>
      <div class="svc-promo-title">Our full<br><em>services menu.</em></div>
      <div class="svc-promo-sub">Hair &middot; Skin &middot; Colour &middot; Nails &middot; Bridal &middot; Men's Grooming &mdash; all with transparent pricing.</div>
      <div class="svc-promo-cta">View All Services &amp; Pricing &#8594;</div>
    </div>
  </a>

  <!-- OFFERS -->
  {% if offers %}
  <div class="offers-block reveal">
    <div class="lbl">Current Offers</div>
    <h2 class="sec-title">Deals &amp; <em>offers</em></h2>
    <div class="offers-grid">
    {% for offer in offers %}
      <div class="offer-txt-card">
        <span class="offer-badge">Special Offer</span>
        <div class="offer-title">{{ offer.get('Offer_Title','') }}</div>
        <div class="offer-details">{{ offer.get('Offer_Details','') }}</div>
        <div class="offer-valid">Valid till: {{ offer.get('Valid_till','') }}</div>
      </div>
    {% endfor %}
    </div>
    <p style="font-size:11px;color:var(--text-light);margin-top:12px;font-style:italic;">* Offers subject to availability. Contact store to confirm.</p>
  </div>
  {% endif %}

  <!-- STYLISTS -->
  {% if stylists %}
  <div class="stylists-section reveal">
    <div class="lbl">Our Team</div>
    <h2 class="sec-title">Meet our <em>stylists</em></h2>
    <div class="stylists-grid">
    {% for stylist in stylists %}
      <div class="stylist-card">
        <div class="stylist-photo">
          <img src="../images/stylists/default_stylist.jpg" alt="{{ stylist.get('Stylist_Name','') }}"
               onerror="this.src='https://images.unsplash.com/photo-1605497788044-5a32c7078486?w=400&q=80'">
        </div>
        <div class="stylist-info">
          <div class="stylist-name">{{ stylist.get('Stylist_Name','') }}</div>
          {% if stylist.get('Specialization','') %}
          <div class="stylist-spec">{{ stylist.Specialization }}</div>
          {% endif %}
          {% if stylist.get('Experience','') %}
          <div class="stylist-exp">{{ stylist.Experience }} yrs experience</div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
  {% endif %}

  <!-- CONTACTS -->
  <div class="contact-block reveal">
    <div class="lbl">Get In Touch</div>
    <h2 class="sec-title">Contact <em>us</em></h2>
    <div class="contact-rows">
      <div class="contact-row">
        <span class="contact-icon">&#128222;</span>
        <div class="contact-detail">
          <div class="contact-lbl">Call</div>
          <a href="tel:{{ s.Phone_Tel }}" class="contact-val">{{ s.Phone_Display }}</a>
        </div>
      </div>
      <div class="contact-row">
        <span class="contact-icon">{{ wa_svg(18) }}</span>
        <div class="contact-detail">
          <div class="contact-lbl">WhatsApp</div>
          <a href="https://wa.me/{{ s.WhatsApp_Number }}" target="_blank" class="contact-val">{{ s.Phone_Display }}</a>
        </div>
      </div>
      {% if s.Landline %}
      <div class="contact-row">
        <span class="contact-icon">&#9742;</span>
        <div class="contact-detail">
          <div class="contact-lbl">Landline</div>
          <a href="tel:{{ s.Landline_Raw }}" class="contact-val">{{ s.Landline }}</a>
        </div>
      </div>
      {% endif %}
      <div class="contact-row">

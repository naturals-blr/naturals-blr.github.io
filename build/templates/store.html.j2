<script>
// ── Baked-in services data for this store ──
const STORE_SERVICES = {{ services_json }};

function ci(s) { return (s || '').trim().toLowerCase(); }

function normGender(raw) {
  var g = ci(raw);
  if (g === 'female' || g === 'women' || g === 'f' || g === 'w') return 'women';
  if (g === 'male'   || g === 'men'   || g === 'm')              return 'men';
  return 'both';
}

function genIcon(g) {
  return g === 'women' ? '&#9792;' : g === 'men' ? '&#9794;' : '&#9893;';
}

function renderSvcCards(data, container) {
  container.innerHTML = '';
  if (!data.length) {
    container.innerHTML = '<p style="color:rgba(255,255,255,0.3);font-style:italic;padding:24px 0;">No services found for this filter.</p>';
    return;
  }
  var cats = {};
  data.forEach(function(r) {
    var cat = (r['Category'] || 'Other').trim();
    if (!cats[cat]) cats[cat] = [];
    cats[cat].push(r);
  });
  Object.keys(cats).forEach(function(cat) {
    var svcs = cats[cat];
    var sec  = document.createElement('div');
    sec.className = 'svc-cat-sec';
    sec.innerHTML = '<div class="svc-cat-hdr"><div class="svc-cat-lbl">Category</div><div class="svc-cat-name">' + cat + '</div></div><div class="svc-cards-grid"></div>';
    container.appendChild(sec);
    var grid = sec.querySelector('.svc-cards-grid');
    svcs.forEach(function(r) {
      var name = (r['Service_Name'] || '').trim();
      var dur  = (r['Duration']     || '').trim();
      var reg  = (r['Regular_Cost'] || '').trim();
      var mem  = (r['Member_Cost']  || '').trim();
      var gen  = (r['Gender']       || '').trim();
      var desc = (r['Description']  || '').trim();
      var memHtml = (mem && ci(mem) !== '-') ? '<span class="price-mem">Members &#8377;' + mem + '</span>' : '';
      var ng = normGender(gen);
      var card = document.createElement('div');
      card.className = 'svc-item';
      card.innerHTML =
        '<div><div class="svc-item-name">' + name + '</div><div class="svc-item-desc">' + desc + '</div></div>' +
        '<div class="svc-item-foot">' +
          '<div class="svc-tags">' +
            (dur ? '<span class="svc-tag">&#9201; ' + dur + '</span>' : '') +
            (gen ? '<span class="svc-tag">' + genIcon(ng) + ' ' + gen + '</span>' : '') +
          '</div>' +
          '<div style="text-align:right"><span class="price-reg">&#8377;' + reg + '</span>' + memHtml + '</div>' +
        '</div>';
      grid.appendChild(card);
    });
  });
}

function storeGenderFilter(btn) {
  var active = btn.classList.contains('active');
  document.querySelectorAll('#svc-filter .f-btn').forEach(function(b) { b.classList.remove('active'); });
  var container = document.getElementById('svc-container');
  if (!active) {
    btn.classList.add('active');
    var g = btn.getAttribute('data-g');
    var filtered = STORE_SERVICES.filter(function(r) {
      var ng = normGender(r['Gender'] || '');
      return ng === normGender(g) || ng === 'both';
    });
    renderSvcCards(filtered, container);
  } else {
    renderSvcCards(STORE_SERVICES, container);
  }
}

// Reveal animation
var io = new IntersectionObserver(function(entries) {
  entries.forEach(function(e, i) {
    if (e.isIntersecting) {
      setTimeout(function() { e.target.classList.add('visible'); }, i * 80);
      io.unobserve(e.target);
    }
  });
}, { threshold: 0 });
document.querySelectorAll('.reveal').forEach(function(el) { io.observe(el); });

// Render services on load
document.addEventListener('DOMContentLoaded', function() {
  renderSvcCards(STORE_SERVICES, document.getElementById('svc-container'));
});
</script>

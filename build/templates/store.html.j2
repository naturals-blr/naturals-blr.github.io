  }
}
</script>
<style>
{{ theme_vars() }}
*{margin:0;padding:0;box-sizing:border-box;}
html{scroll-behavior:smooth;}
body{font-family:'Jost',sans-serif;background:var(--cream);color:var(--text);overflow-x:hidden;}
a{text-decoration:none;color:inherit;}
img{display:block;width:100%;object-fit:cover;}

/* nav handled by partials/header.j2 */

/* HERO */
.hero{height:70vh;min-height:500px;position:relative;display:flex;align-items:flex-end;overflow:hidden;}
.hero-bg{position:absolute;inset:0;}
.hero-bg img{height:100%;object-fit:cover;}
.hero-ov{position:absolute;inset:0;background:linear-gradient(to top,var(--hero-tint) 0%,var(--hero-tint2) 50%,rgba(0,0,0,0.1) 100%);}
.hero-content{position:relative;z-index:2;padding:60px 60px 48px;width:100%;}
.hero-badge{font-size:9px;letter-spacing:4px;text-transform:uppercase;color:var(--gold);font-weight:600;margin-bottom:12px;}
.hero-content h1{font-family:'Cormorant Garamond',serif;font-size:clamp(36px,5vw,68px);font-weight:300;color:#fff;line-height:0.95;margin-bottom:12px;}
.hero-content h1 em{font-style:italic;color:var(--gold);}
.hero-sub{font-size:13px;color:rgba(255,255,255,0.45);font-weight:300;margin-bottom:28px;}

/* ── ACTION BAR — single row of 3 clean buttons ── */
.action-bar{display:flex;gap:10px;flex-wrap:wrap;}
.ab-primary{background:var(--gold);color:var(--dark);padding:13px 26px;font-size:11px;letter-spacing:2px;text-transform:uppercase;font-weight:700;transition:all 0.3s;display:inline-flex;align-items:center;gap:8px;white-space:nowrap;}
.ab-primary:hover{background:var(--gold-pale);transform:translateY(-1px);}
.ab-ghost{border:1px solid rgba(255,255,255,0.28);color:rgba(255,255,255,0.75);padding:13px 22px;font-size:11px;letter-spacing:2px;text-transform:uppercase;transition:all 0.3s;display:inline-flex;align-items:center;gap:8px;white-space:nowrap;}
.ab-ghost:hover{border-color:var(--gold);color:var(--gold);}

/* INFO BAR — 4 cells */
.info-bar{display:grid;grid-template-columns:repeat(4,1fr);background:var(--dark);border-top:1px solid rgba(255,255,255,0.06);}
.info-cell{padding:20px 22px;border-right:1px solid rgba(255,255,255,0.07);display:flex;align-items:flex-start;gap:10px;}
.info-cell:last-child{border-right:none;}
.info-icon{font-size:18px;flex-shrink:0;margin-top:2px;display:flex;align-items:center;}
.info-label{font-size:9px;letter-spacing:2.5px;text-transform:uppercase;color:rgba(255,255,255,0.3);font-weight:600;margin-bottom:3px;}
.info-val{font-size:13px;color:#fff;font-weight:400;display:block;transition:color 0.2s;line-height:1.3;}
a.info-val:hover{color:var(--gold);}
.info-val-sm{font-size:11px;color:rgba(255,255,255,0.28);display:block;margin-top:2px;}

/* LAYOUT */
.page-wrap{display:grid;grid-template-columns:1fr 300px;gap:0;align-items:start;max-width:1160px;margin:0 auto;padding:56px 60px;}
.main-col{padding-right:44px;}

/* SHARED */
.lbl{font-size:9px;letter-spacing:5px;text-transform:uppercase;color:var(--gold);font-weight:600;margin-bottom:14px;display:flex;align-items:center;gap:12px;}
.lbl::before{content:'';width:18px;height:1px;background:var(--gold);}
.sec-title{font-family:'Cormorant Garamond',serif;font-size:clamp(26px,3vw,38px);font-weight:300;line-height:1.05;margin-bottom:18px;}
.sec-title em{font-style:italic;color:var(--green-mid);}
.sec-title-wh{color:#fff;}
.sec-title-wh em{color:var(--green-soft);}
.about-p{font-size:13px;color:var(--text-mid);line-height:1.9;font-weight:300;margin-bottom:10px;}
.reveal{opacity:0;transform:translateY(20px);transition:opacity 0.6s ease,transform 0.6s ease;}
.reveal.visible{opacity:1;transform:translateY(0);}

/* ABOUT GRID */
.about-grid{display:grid;grid-template-columns:1fr 1fr;gap:28px;margin-bottom:48px;align-items:center;}
.about-img-wrap{overflow:hidden;height:320px;}
.about-img-wrap img{height:100%;object-fit:cover;transition:transform 6s ease;}
.about-img-wrap:hover img{transform:scale(1.04);}
.btn-gold{background:var(--gold);color:var(--dark);padding:12px 24px;font-size:11px;letter-spacing:2px;text-transform:uppercase;font-weight:700;transition:all 0.3s;display:inline-flex;align-items:center;gap:8px;}
.btn-gold:hover{background:var(--gold-pale);}

/* ── SERVICES PROMO CARD ── */
.svc-promo{position:relative;overflow:hidden;height:280px;display:block;margin-bottom:3px;}
.svc-promo img{height:100%;object-fit:cover;transition:transform 7s ease;}
.svc-promo:hover img{transform:scale(1.05);}
.svc-promo-ov{position:absolute;inset:0;background:linear-gradient(to top,var(--hero-tint) 0%,var(--hero-tint2) 50%,rgba(0,0,0,0.1) 100%);transition:opacity 0.4s;}
.svc-promo:hover .svc-promo-ov{opacity:0.88;}
.svc-promo-body{position:absolute;inset:0;display:flex;flex-direction:column;justify-content:center;padding:36px 40px;}
.svc-promo-eyebrow{font-size:9px;letter-spacing:4px;text-transform:uppercase;color:var(--gold);font-weight:600;margin-bottom:10px;}
.svc-promo-title{font-family:'Cormorant Garamond',serif;font-size:clamp(28px,3.5vw,44px);color:#fff;font-weight:300;line-height:1.0;margin-bottom:10px;}
.svc-promo-title em{font-style:italic;color:var(--gold);}
.svc-promo-sub{font-size:12px;color:rgba(255,255,255,0.5);font-weight:300;line-height:1.7;margin-bottom:22px;max-width:360px;}
.svc-promo-cta{display:inline-flex;align-items:center;gap:8px;background:var(--gold);color:var(--dark);padding:11px 24px;font-size:10px;letter-spacing:2.5px;text-transform:uppercase;font-weight:700;transition:all 0.3s;align-self:flex-start;}
.svc-promo:hover .svc-promo-cta{background:var(--gold-pale);}

/* OFFERS */
.offers-block{padding:36px 0;margin-bottom:3px;}
.offers-grid{display:grid;grid-template-columns:1fr 1fr;gap:3px;}
.offer-txt-card{background:var(--dark);padding:28px;position:relative;}
.offer-img-card{overflow:hidden;}
.offer-img-card img{height:220px;object-fit:cover;}
.offer-badge{font-size:9px;letter-spacing:3px;text-transform:uppercase;color:var(--gold);font-weight:600;display:block;margin-bottom:10px;}
.offer-title{font-family:'Cormorant Garamond',serif;font-size:22px;color:#fff;font-weight:300;margin-bottom:8px;}
.offer-details{font-size:13px;color:rgba(255,255,255,0.4);line-height:1.7;font-weight:300;margin-bottom:12px;}
.offer-valid{font-size:11px;color:var(--gold);letter-spacing:1px;}

/* CONTACTS */
.contact-block{background:#fff;padding:36px;margin-bottom:3px;}
.contact-rows{display:flex;flex-direction:column;margin-top:16px;}
.contact-row{display:flex;align-items:center;gap:14px;padding:12px 0;border-bottom:1px solid rgba(0,0,0,0.05);}
.contact-icon{font-size:18px;flex-shrink:0;width:22px;display:flex;align-items:center;}
.contact-detail{flex:1;}
.contact-lbl{font-size:9px;letter-spacing:2px;text-transform:uppercase;color:var(--text-light);font-weight:600;margin-bottom:2px;}
.contact-val{font-size:13px;color:var(--text-mid);font-weight:300;transition:color 0.3s;}
a.contact-val:hover{color:var(--green);}

/* STYLISTS */
.stylists-section{padding:36px 0;}
.stylists-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:3px;margin-top:18px;}
.stylist-card{background:#fff;overflow:hidden;}
.stylist-photo{height:180px;overflow:hidden;}
.stylist-photo img{height:100%;object-fit:cover;}
.stylist-info{padding:14px;}
.stylist-name{font-family:'Cormorant Garamond',serif;font-size:17px;color:var(--text);font-weight:400;margin-bottom:3px;}
.stylist-spec{font-size:10px;color:var(--gold);letter-spacing:1px;text-transform:uppercase;margin-bottom:2px;}
.stylist-exp{font-size:11px;color:var(--text-light);}

/* ── SIDEBAR — clean, minimal, no repeated buttons ── */
.sb-inner{background:#fff;padding:28px;position:sticky;top:86px;}
.sb-name{font-family:'Cormorant Garamond',serif;font-size:20px;color:var(--text);font-weight:400;margin-bottom:3px;}
.sb-area{font-size:10px;color:var(--gold);letter-spacing:2px;text-transform:uppercase;margin-bottom:20px;}
/* Single prominent book button */
.sb-book-main{display:flex;align-items:center;justify-content:center;gap:10px;background:var(--gold);color:var(--dark);padding:14px;font-size:11px;letter-spacing:2px;text-transform:uppercase;font-weight:700;transition:all 0.3s;width:100%;margin-bottom:8px;}
.sb-book-main:hover{background:var(--gold-pale);}
/* Compact secondary links row */
.sb-quick{display:grid;grid-template-columns:1fr 1fr;gap:6px;margin-bottom:20px;}
.sb-ql{display:flex;flex-direction:column;align-items:center;justify-content:center;gap:4px;padding:10px 6px;border:1px solid rgba(0,0,0,0.09);color:var(--text-mid);font-size:9px;letter-spacing:1.5px;text-transform:uppercase;font-weight:600;transition:all 0.3s;text-align:center;}
.sb-ql span{font-size:16px;}
.sb-ql:hover{border-color:var(--green);color:var(--green);}
.sb-ql-wa:hover{border-color:#25D366;color:#25D366;}
.sb-divider{height:1px;background:rgba(0,0,0,0.06);margin:16px 0;}
.sb-sec{font-size:9px;letter-spacing:3px;text-transform:uppercase;color:var(--text-light);font-weight:600;margin-bottom:10px;}
.h-row{display:flex;justify-content:space-between;font-size:12px;color:var(--text-mid);padding:5px 0;border-bottom:1px solid rgba(0,0,0,0.04);}
.h-day{font-weight:500;color:var(--text);}
.sb-social{display:flex;gap:8px;margin-top:4px;}
.sb-soc{flex:1;display:flex;align-items:center;justify-content:center;gap:6px;font-size:11px;color:var(--text-mid);padding:9px;border:1px solid rgba(0,0,0,0.08);transition:all 0.3s;}
.sb-insta:hover{border-color:#E1306C;color:#E1306C;}
.sb-fb:hover{border-color:#1877F2;color:#1877F2;}

/* STORE NAV */
.store-nav{background:var(--dark);padding:20px 60px;display:flex;justify-content:space-between;align-items:center;border-top:1px solid rgba(255,255,255,0.06);}
.sn-link{font-size:11px;letter-spacing:2px;text-transform:uppercase;color:rgba(255,255,255,0.45);transition:color 0.3s;}
.sn-link:hover{color:var(--gold);}
.sn-mid{font-size:10px;color:rgba(255,255,255,0.2);letter-spacing:2px;text-transform:uppercase;}

{{ button_css() }}
{{ footer_css() }}
{{ social_icons_css() }}

@media(max-width:1100px){
  .page-wrap{grid-template-columns:1fr;padding:40px 40px;}
  .main-col{padding-right:0;}
  .sb-inner{position:static;margin-top:36px;}
}
@media(max-width:768px){
  nav{padding:0 20px;height:60px;}
  .nav-cta{display:none;}
  .hero-content{padding:36px 20px 32px;}
  .info-bar{grid-template-columns:1fr 1fr;}
  .info-cell{padding:14px 16px;}
  .about-grid{grid-template-columns:1fr;}
  .about-img-wrap{height:260px;}
  .offers-grid{grid-template-columns:1fr;}
  .stylists-grid{grid-template-columns:1fr 1fr;}
  .page-wrap{padding:28px 20px;}
  .store-nav{padding:14px 20px;}
  .svc-promo{height:240px;}
  .svc-promo-body{padding:28px 24px;}
}
@media(max-width:480px){
  .info-bar{grid-template-columns:1fr 1fr;}
  .action-bar{flex-direction:column;}
  .stylists-grid{grid-template-columns:1fr;}
  .sb-quick{grid-template-columns:1fr 1fr 1fr 1fr;}
}
</style>
{{ theme_init_script() }}
